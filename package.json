{
  "name": "iohk-frontend-technical-assessment",
  "version": "0.1.0",
  "description": "IOHK Frontend Technical Assessment",
  "author": "Charl Ritter",
  "scripts": {
    "build": "next build",
    "compile-tailwind": "yarn tailwindcss build -c tailwind.config.ts -o public/theme/tailwind.css",
    "dev": "next dev",
    "lint": "next lint && stylelint '**/*.scss'",
    "lint:fix": "next lint --fix && yarn stylelint '**/*.scss' --fix --allow-empty-input",
    "prepare": "husky",
    "sort-package": "yarn sort-package-json",
    "start": "next start",
    "test": "yarn build && playwright test",
    "test:report": "yarn playwright show-report",
    "test:ui": "yarn playwright test --ui"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "next lint --fix"
    ],
    "*.{scss,css}": [
      "stylelint --fix --allow-empty-input"
    ]
  },
  "dependencies": {
    "@ant-design/nextjs-registry": "^1.0.0",
    "@playwright/test": "^1.44.1",
    "antd": "^5.17.4",
    "next": "14.2.32",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.2.1",
    "recharts": "^2.12.7",
    "sass": "^1.77.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "autoprefixer": "^10.4.19",
    "commitizen": "^4.3.0",
    "eslint": "^9",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "pinst": "^3.0.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "sort-package-json": "^2.10.0",
    "style-loader": "^4.0.0",
    "stylelint": "^16.6.1",
    "stylelint-config-sass-guidelines": "^11.1.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-scss": "^6.3.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "packageManager": "yarn@4.2.2"
}
